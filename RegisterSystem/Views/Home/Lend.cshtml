
@{
    ViewBag.Title = "借出登记";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3 class="text-center">预约登记</h3>
            <div class="row">
                <div class="col-md-offset-3">
                    <form action="@Url.Action("AdvanceLend")" method="post">
                        <div class="form-group">
                            <label for="beforeNameID">姓名</label>
                            <input type="text" class="form-control" id="beforeNameID" placeholder="姓名" name="beforeName" required />
                        </div>
                        <div class="form-group">
                            <label for="beforeReasonID">预约原因</label>
                            <input type="text" class="form-control" id="beforeReasonID" placeholder="预约原因" name="beforeReason" required/>
                        </div>
                        <div class="form-group">
                            <label for="beforeTimeID">预约时间</label>
                            <input type="datetime-local" class="form-control" id="beforeTimeID" name="beforeTime" required/>
                        </div>
                        <div class="form-group">
                            <label for="returnTimeID">预计归还时间时间</label>
                            <input type="datetime-local" class="form-control" id="returnTimeID" name="returnTime" required/>
                        </div>
                        <div class="row">
                            <div class="col-md-2 col-md-offset-3">
                                <button type="submit" class="btn btn-default">确定</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h3 class="text-center">借出登记</h3>
            <div class="col-md-offset-3">
                <form action="@Url.Action("RegistrationLend")" method="post">
                    <div class="form-group">
                        <label for="afterNameID">姓名</label>
                        <input type="text" class="form-control" id="afterNameID" placeholder="姓名" name="afterName" required/>
                    </div>
                    <div class="form-group">
                        <label for="afterReasonID">借出原因</label>
                        <input type="text" class="form-control" id="afterReasonID" placeholder="借出原因" name="afterReason" required/>
                    </div>
                    <div class="form-group">
                        <label for="advanceTimeID">预计归还时间时间</label>
                        <input type="datetime-local" class="form-control" id="advanceTimeID" name="advanceTime" required/>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-md-offset-3">
                            <button type="submit" class="btn btn-default">确定</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

